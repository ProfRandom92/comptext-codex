{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CompText Profile Schema",
  "type": "object",
  "required": [
    "profile"
  ],
  "properties": {
    "profile": {
      "type": "object",
      "required": [
        "name",
        "modules"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "modules": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "use_case": {
          "type": "string"
        }
      }
    }
  }
}