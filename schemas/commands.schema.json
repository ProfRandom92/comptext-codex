{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CompText Commands Schema",
  "type": "object",
  "properties": {
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string"
          },
          "module": {
            "type": "string",
            "pattern": "^[A-M]$"
          },
          "syntax": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "aliases": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "token_cost_hint": {
            "type": "integer"
          },
          "mcp_exposed": {
            "type": "boolean"
          }
        },
        "required": [
          "command",
          "module",
          "syntax",
          "description"
        ]
      }
    }
  },
  "required": [
    "commands"
  ]
}