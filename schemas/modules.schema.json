{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CompText Modules Schema",
  "type": "object",
  "properties": {
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "pattern": "^[A-M]$"
          },
          "name": {
            "type": "string"
          },
          "purpose": {
            "type": "string"
          },
          "token_priority": {
            "type": "string",
            "enum": [
              "high",
              "medium",
              "low"
            ]
          },
          "mcp_exposed": {
            "type": "boolean"
          }
        },
        "required": [
          "code",
          "name",
          "purpose"
        ]
      }
    }
  },
  "required": [
    "modules"
  ]
}