{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CompText Profiles Schema",
  "type": "object",
  "properties": {
    "profiles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "enabled_modules": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[A-M]$"
            }
          },
          "default_settings": {
            "type": "object"
          }
        },
        "required": [
          "name",
          "description",
          "enabled_modules"
        ]
      }
    }
  },
  "required": [
    "profiles"
  ]
}